<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's play!"
        android:textSize="32sp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textColor="#227B94"
        android:shadowColor="#88000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter an integer value between 1 and 20"
        android:textSize="18sp"
        android:textColor="#616161"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a value"
        android:padding="12dp"
        android:textSize="18sp"
        android:background="@drawable/edittext_b"
        android:inputType="number"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Guess"
        android:textColor="#FFFFFF"
        android:backgroundTint="#227B94"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#C7253E"
        android:textStyle="bold"
        android:layout_marginTop="24dp"/>

</LinearLayout>
